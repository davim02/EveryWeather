SearchWidget QLineEdit { 
    background-color: #31363b; 
    color: #ffffff; 
    border: 1px solid #63ace5; 
    border-radius: 5px; 
    padding: 5px; 
}

SearchWidget QPushButton {
    qproperty-icon: url(:assets/icons/search_white.png);
