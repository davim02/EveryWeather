    border: 1px solid #4d4d4d;
    border-radius: 5px;
    padding: 5px;
}

SearchWidget QPushButton:hover {
    background-color: #3d3d3d;
}

SearchWidget QPushButton:pressed {
    background-color: #2c2c2c;
}